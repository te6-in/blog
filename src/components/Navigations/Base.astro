---
import { type LinkProps } from "astro-typesafe-routes/link";
import Link from "astro-typesafe-routes/link";
import type { RouteId } from "astro-typesafe-routes/path";

type Props<T extends RouteId> = LinkProps<T>;

const { class: className, ...props } = Astro.props;
---

<Link
  {...props}
  class:list={[
    "flex gap-1.5 px-4 py-3 rounded-full bg-content-card-bg dark:bg-content-card-bg-dark border border-gray-200 dark:border-neutral-800 items-center text-sm text-gray-800 dark:text-neutral-200 font-semibold engaged:bg-gray-100 dark:engaged:bg-neutral-900 transition-colors shadow flex-none",
    className,
  ]}
>
  <slot />
</Link>
