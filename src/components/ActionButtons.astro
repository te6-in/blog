---
import type { HTMLAttributes } from "astro/types";
import { MessageCircleMore, PartyPopper, Share } from "lucide-astro";

interface Props extends HTMLAttributes<"div"> {}

const { class: className, ...props } = Astro.props;
---

<div
  class:list={[
    "inline-flex toc-shown:flex-col gap-1.5 sidebar-shown:gap-2 items-end pointer-events-none flex-wrap justify-end",
    className,
  ]}
  {...props}
>
  <div class="flex gap-1.5 sidebar-shown:gap-2 items-end">
    <button
      transition:persist
      type="button"
      title="공유"
      aria-label="공유"
      id="share-button"
      class="p-2.5 sidebar-shown:p-3 toc-shown:bg-white dark:toc-shown:bg-neutral-950 border toc-shown:border-gray-200 dark:toc-shown:border-neutral-800 toc-shown:backdrop-blur-none backdrop-blur-lg bg-white/65 dark:bg-neutral-950/65 border-gray-200/65 dark:border-neutral-800/65 toc-shown:shadow rounded-full gap-1.5 items-center font-semibold transition-all toc-shown:engaged:bg-gray-100 dark:toc-shown:engaged:bg-neutral-900 toc-shown:engaged:border-gray-300 dark:toc-shown:engaged:border-neutral-700 text-sm toc-shown:text-gray-800 dark:toc-shown:text-neutral-200 cursor-pointer data-share-available:opacity-100 opacity-0 pointer-events-auto engaged:bg-white/85 dark:engaged:bg-neutral-950/85 engaged:border-gray-200/85 dark:engaged:border-neutral-800/85 shadow-sm text-gray-800/90 dark:text-neutral-200/90 noscript:hidden"
    >
      <Share class="flex-none" size={20} />
    </button>
  </div>
  <div class="flex gap-1.5 sidebar-shown:gap-2 items-end">
    <a
      href="#comments"
      class="px-3 py-2.5 sidebar-shown:px-3.5 sidebar-shown:py-3 toc-shown:bg-white dark:toc-shown:bg-neutral-950 border toc-shown:border-gray-200 dark:toc-shown:border-neutral-800 toc-shown:backdrop-blur-none backdrop-blur-lg bg-white/65 dark:bg-neutral-950/65 border-gray-200/65 dark:border-neutral-800/65 toc-shown:shadow rounded-full flex gap-1.5 items-center font-semibold transition-all toc-shown:engaged:bg-gray-100 dark:toc-shown:engaged:bg-neutral-900 toc-shown:engaged:border-gray-300 dark:toc-shown:engaged:border-neutral-700 text-sm toc-shown:text-gray-800 dark:toc-shown:text-neutral-200 pointer-events-auto engaged:bg-white/85 dark:engaged:bg-neutral-950/85 engaged:border-gray-200/85 dark:engaged:border-neutral-800/85 shadow-sm text-gray-800/90 dark:text-neutral-200/90"
    >
      <PartyPopper class="flex-none" size={20} />
      <span class="flex items-baseline">
        <span>반응</span>
        <span
          id="reaction-count"
          class="text-current/50 supports-[width:calc-size(auto,size)]:w-0 supports-[width:calc-size(auto,size)]:not-empty:w-[calc-size(auto,size)] transition-[width,opacity,margin] animate-fade-in supports-[width:calc-size(auto,size)]:opacity-0 supports-[width:calc-size(auto,size)]:not-empty:opacity-100 not-empty:ms-[0.5ch]"
        >
        </span>
      </span>
      <a
        href="#comments"
        class="px-3 py-2.5 sidebar-shown:px-3.5 sidebar-shown:py-3 toc-shown:bg-white dark:toc-shown:bg-neutral-950 border toc-shown:border-gray-200 dark:toc-shown:border-neutral-800 toc-shown:backdrop-blur-none backdrop-blur-lg bg-white/65 dark:bg-neutral-950/65 border-gray-200/65 dark:border-neutral-800/65 toc-shown:shadow rounded-full flex gap-1.5 items-center font-semibold transition-all toc-shown:engaged:bg-gray-100 dark:toc-shown:engaged:bg-neutral-900 toc-shown:engaged:border-gray-300 dark:toc-shown:engaged:border-neutral-700 text-sm toc-shown:text-gray-800 dark:toc-shown:text-neutral-200 pointer-events-auto engaged:bg-white/85 dark:engaged:bg-neutral-950/85 engaged:border-gray-200/85 dark:engaged:border-neutral-800/85 shadow-sm text-gray-800/90 dark:text-neutral-200/90"
      >
        <MessageCircleMore class="flex-none" size={20} />
        <span class="flex items-baseline">
          <span>댓글</span>
          <span
            id="comment-count"
            class="text-current/50 supports-[width:calc-size(auto,size)]:w-0 supports-[width:calc-size(auto,size)]:not-empty:w-[calc-size(auto,size)] transition-[width,opacity,margin] animate-fade-in supports-[width:calc-size(auto,size)]:opacity-0 supports-[width:calc-size(auto,size)]:not-empty:opacity-100 not-empty:ms-[0.5ch]"
          ></span>
        </span>
      </a>
    </a>
  </div>
</div>

<script>
  const shareButton = document.getElementById("share-button");

  if (!navigator.share) {
    shareButton?.remove();
  }

  if (navigator.share) {
    shareButton?.setAttribute("data-share-available", "");
    shareButton?.addEventListener("click", async () => {
      await navigator.share({
        title: document.title,
        url: window.location.href,
      });
    });
  }
</script>

<script>
  let reactionCountLabel: HTMLElement | null = null;
  let commentCountLabel: HTMLElement | null = null;

  document.addEventListener("astro:page-load", () => {
    reactionCountLabel = document.getElementById("reaction-count");
    commentCountLabel = document.getElementById("comment-count");
  });

  window.addEventListener("message", (event) => {
    if (event.origin !== "https://giscus.app") return;
    if (!(typeof event.data === "object" && event.data.giscus)) return;

    const giscusDiscussionData = event.data.giscus.discussion;

    const reactionCount = giscusDiscussionData?.reactionCount ?? 0;
    const commentCount =
      (giscusDiscussionData?.totalCommentCount ?? 0) +
      (giscusDiscussionData?.totalReplyCount ?? 0);

    if (reactionCount && reactionCountLabel) {
      reactionCountLabel.innerText = `${reactionCount}`;
    }

    if (commentCount && commentCountLabel) {
      commentCountLabel.innerText = `${commentCount}`;
    }
  });
</script>
