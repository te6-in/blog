---
// biome-ignore lint/style/useImportType: <explanation>
import { BaselineStatus as Baseline } from "astro-embed";
import type { ComponentProps } from "astro/types";

interface Props extends ComponentProps<typeof Baseline> {}
---
<Baseline {...Astro.props} />
<script>
  const container = document.querySelector<HTMLDivElement>(".baseline-status");

  if (!container) throw new Error("BaselineStatus container not found");
  if (!container.shadowRoot)
    throw new Error("BaselineStatus shadowRoot not found");

  const anchors = container.shadowRoot.querySelectorAll("a");

  for (const anchor of anchors) {
    anchor.target = "_blank";
    anchor.rel = "noopener noreferrer";
  }
</script>
