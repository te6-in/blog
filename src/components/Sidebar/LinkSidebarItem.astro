---
import Link from "astro-typesafe-routes/link";
import type { RouteId, RouteOptions } from "astro-typesafe-routes/path";
import type { HTMLAttributes } from "astro/types";

type Props<T extends RouteId> = Omit<HTMLAttributes<"a">, "href"> &
  RouteOptions<T> & {
    isCurrentPage?: boolean;
  };

const { isCurrentPage = false, ...props } = Astro.props;
---

<Link
  {...props}
  {...isCurrentPage && { "aria-current": "page" }}
  class:list={[
    "flex items-center justify-between gap-1 rounded-lg engaged:bg-body-item-engaged dark:engaged:bg-body-item-engaged-dark -mx-2 p-2 transition-colors z-10",
    isCurrentPage
      ? "text-primary-600 dark:text-primary-400"
      : "text-gray-700 dark:text-neutral-300",
  ]}
>
  <div class="flex items-center gap-2">
    <slot name="icon" />
    <span class="font-semibold">
      <slot name="title" />
    </span>
  </div>
</Link>
