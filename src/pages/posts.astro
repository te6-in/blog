---
import { $path } from "astro-typesafe-routes/path";
import MainHeader from "../components/MainHeader.astro";
import PostList from "../components/PostList";
import Layout from "../layouts/Layout.astro";
import { getPosts } from "../lib/contents";
import { METADATA } from "../lib/metadata";

const posts = await getPosts({ sortBy: "publishedAt" });
---

<Layout
  metadataProps={{
    title: `모든 ${METADATA.lexicons.posts.label}`,
    canonicalUrl: new URL($path({ to: "/posts" }), Astro.url.origin).href,
  }}
  sidebarProps={{ currentPage: { type: "posts" } }}
>
  <MainHeader
    class="w-full"
    title={`모든 ${METADATA.lexicons.posts.label}`}
    titleCount={posts.length}
  />
  <PostList posts={posts} />
</Layout>
